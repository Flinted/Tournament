<%= erb :'knights/stables' %>
<hr>

<h2>Horses</h2>
<% @horses.each do |horse| %>
      <div class="minihorse">
                  <b><a href="/horses/<%=horse.id%>"><%= horse.name()%></a></b>
                  <div class = "horse_mini_sizer"><a href="/horses/<%= horse.id%>"><img class = "thumbnail" src="<%=horse.img%>"></a></div>
                  <%if horse.knight_id != 0  %>
                        <p>ridden by <%=horse.get_knight.name %></p>
                      <div class = "mini_portrait"><img class = "thumbnail" src="<%=horse.get_knight.img %>"></div>
                  <% else %>
                        <p>Is in the stable.</p>
                        <div class = "stable_sizer"><img class = "thumbnail" src="/castle.png"></div>
                  <%end %>

      </div>
<%end%>