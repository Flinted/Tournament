<h2>Add a new Event!</h2>

<form action="/events" method="post">
 <label for="name">Event name:</label>
 <input type="text" name="name" placeholder="Enter name.">

 <label for="family"> Event family:</label>
 <select name="family">
     <option value="combat">Combat</option>
     <option value="sporting">Sporting</option>
 </select>

<label for="type">Event type:</label>
<select name="type">
  <option value="mounted">Mounted</option>
  <option value="on foot">On foot</option>
  <option value="ranged">Ranged</option>
  <option value="solo">Solo</option>
  <option value="team">Team</option>
</select>

<label for="img">Event image:</label>
<input type="text" name="img" placeholder="Enter url">

<label for="max">Maximum Competitors:</label>
<input type="number" name="" placeholder="Enter max">

<label for="prize">Prize Money:</label>
<input type="number" name="name" placeholder="Enter prize">

<label for="date">Event Date:</label>
<input type="date" name="date">

<input type='submit' value="Add Event">
</form>
